extends layout

block content     
	h2 Restaurant Listings
	table
		tbody
			each restaurant, i in restaurants
				tr
					td 
						img(src='/images/#{restaurant.image}', width='250px' height='250px')
					td #{restaurant.restaurantName}
					td 
						a(href='#{restaurant.url}' id='url' title='#{restaurant.url') #{restaurant.url}
					td #{restaurant.description}
					td Rating: #{restaurant.rating}
					td 
						a(href='restaurants/donation/#{restaurant._id}' id='donate', title='Donate to this restaurant') Donate
					td
						a(href='restaurants/edit/#{restaurant._id}' title='Edit') Edit
					td
						a(href='restaurants/delete/#{restaurant._id}' title='Delete' onclick='return confirm(\'Are you sure you want to delete this restaurant listing?\');') Delete
		tfoot 
			tr
				td 
					a(href='/restaurants' title='Back to Top') Back to Top